<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.EditRoomActivity">

    <TextView
        android:id="@+id/headerTextView_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Room"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#fece2f"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/titleTextView_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#EAE4E4"
        android:padding="5dp"
        android:text="Title"
        android:textColor="#696969"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTextView_edit"
        app:layout_constraintWidth_percent="1.0" />

    <EditText
        android:id="@+id/titleEditText_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/descriptionTextView_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFEAE4E4"
        android:padding="5dp"
        android:text="Description"
        android:textColor="#696969"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEditText_edit"
        app:layout_constraintWidth_percent="1.0" />

    <EditText
        android:id="@+id/descriptionEditText_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Description"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/priceTextView_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFEAE4E4"
        android:padding="5dp"
        android:text="Price"
        android:textColor="#696969"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEditText_edit"
        app:layout_constraintWidth_percent="1.0" />

    <EditText
        android:id="@+id/priceEditText_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Price"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/priceTextView_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/locationTextView_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFEAE4E4"
        android:padding="5dp"
        android:text="Location"
        android:textColor="#696969"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceEditText_edit"
        app:layout_constraintWidth_percent="1.0" />

    <EditText
        android:id="@+id/locationEditText_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Location"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/locationTextView_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/roomImageView_edit"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/locationEditText_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/chooseImageButton_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:backgroundTint="#999999"
        app:layout_constraintTop_toBottomOf="@+id/roomImageView_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="onChooseImageClick_edit"/>

    <Button
        android:id="@+id/saveButton_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#fece2f"
        android:onClick="onSaveClick_edit"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseImageButton_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>
